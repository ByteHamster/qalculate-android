<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Qalculate" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/qalculate_pink</item>
        <item name="colorPrimaryVariant">@color/qalculate_pink</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/bluegrey_800</item>
        <item name="colorSecondaryVariant">@color/bluegrey_800</item>
        <item name="colorOnSecondary">@color/white</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="calculatorButtonDefault">@style/CalculatorButton.Default</item>
        <item name="calculatorButtonOutlined">@style/CalculatorButton.Outlined</item>
    </style>

    <style name="Theme.Qalculate.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="CalculatorButton.Default" parent="Widget.MaterialComponents.Button">
        <item name="android:textColor">?attr/colorOnSecondary</item>
        <item name="backgroundTint">?attr/colorSecondary</item>
        <item name="android:backgroundTint">?attr/colorSecondary</item>
        <item name="android:textSize">22sp</item>
    </style>

    <style name="CalculatorButton.Outlined" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="android:textSize">22sp</item>
    </style>
</resources>